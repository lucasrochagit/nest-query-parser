  
{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "strict": true,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./lib",
      "skipLibCheck": true,
      "moduleResolution": "node"
    },
    "include": [
      "lib/**/*",
      "index.d.ts"
    ],
    "exclude": [
      "node_modules",
    ]
  }